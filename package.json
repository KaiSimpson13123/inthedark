{
  "name": "inthedark",
  "version": "0.1.0",
  "description": "InTheDark - a proxy-forced Electron browser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "build": {
    "appId": "com.jetrix.inthedark",
    "productName": "In The Dark",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "signAndEditExecutable": false,
      "icon": "images/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
